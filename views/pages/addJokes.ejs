<section class="addJokes bg-dark pt-5">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card shadow-lg bg-dark">
					<div class="card-header text-center bg-primary text-white">
						<h3>Add a Joke</h3>
					</div>
					<div class="card-body">
						<form action="/addJoke" method="POST">
							<div class="mb-3">
								<label for="jokeText" class="form-label text-white">Joke Text:</label>
								<textarea
									class="form-control"
									id="jokeText"
									name="jokeText"
									rows="4"
									placeholder="Enter your joke here"
									required
								></textarea>
							</div>

							<div class="d-grid">
								<button type="submit" class="btn btn-primary">Add Joke</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
